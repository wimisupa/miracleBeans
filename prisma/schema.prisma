// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Member {
  id        String   @id @default(cuid())
  name      String
  role      String   // PARENT, CHILD
  pin       String   @default("0000") // 4-digit PIN
  points    Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Relations
  assignedTasks    Task[]          @relation("AssignedTasks")
  createdTasks     Task[]          @relation("CreatedTasks")
  transactions     Transaction[]
  approvals        TaskApproval[]
  assignedRoutines Routine[]       @relation("AssignedRoutines")
  createdRoutines  Routine[]       @relation("CreatedRoutines")
}

model Task {
  id          String   @id @default(cuid())
  title       String
  description String?
  type        String   // EARN, SPEND
  points      Int
  status      String   // PENDING, APPROVED, REJECTED, COMPLETED
  
  // Relations
  creatorId   String
  creator     Member   @relation("CreatedTasks", fields: [creatorId], references: [id])
  assigneeId  String?
  assignee    Member?  @relation("AssignedTasks", fields: [assigneeId], references: [id])
  
  durationMinutes Int?  // For HOURGLASS tasks

  routineId   String?
  routine     Routine? @relation(fields: [routineId], references: [id], onDelete: SetNull)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  approvals   TaskApproval[]
}

model Transaction {
  id        String   @id @default(cuid())
  amount    Int
  reason    String
  
  // Relations
  memberId  String
  member    Member   @relation(fields: [memberId], references: [id])
  
  createdAt DateTime @default(now())
}

model TaskApproval {
  id        String   @id @default(cuid())
  taskId    String
  task      Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)
  memberId  String
  member    Member   @relation(fields: [memberId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([taskId, memberId])
}

model Routine {
  id              String   @id @default(cuid())
  title           String
  points          Int
  type            String   // EARN, HOURGLASS
  durationMinutes Int?
  
  creatorId       String
  creator         Member   @relation("CreatedRoutines", fields: [creatorId], references: [id])
  assigneeId      String
  assignee        Member   @relation("AssignedRoutines", fields: [assigneeId], references: [id])
  
  timeOfDay       String?  // HH:MM format
  daysOfWeek      String   // e.g., "Mon,Tue,Wed,Thu,Fri,Sat,Sun"
  isActive        Boolean  @default(true)
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  tasks           Task[]
}
